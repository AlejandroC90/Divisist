<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>


    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">



        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="LoginFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>


    <style name="RojoUniversidadFondo" parent="android:Theme.Holo.Light.DarkActionBar" >
        <item name="android:background">#FFFF4444</item>
    </style>


    <style name="RojoU">
        <item name="android:color">#ffff0015</item>
        <item name="android:background">#ffff0015</item>
    </style>



    <style name="BlancoLetra" parent="android:Theme.Black">
        <item name="android:textColor">#FFFFFFFF</item>


    </style>

    <!-- your theme inherits from the material theme -->
    <style name="MaterialVersion1Nomenorque21" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- theme customizations -->
    </style>

    <style name="MaterialDivisit" parent="AppTheme.Base"/>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>


</resources>
