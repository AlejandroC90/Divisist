<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="310dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:paddingLeft="15dp"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:paddingRight="15dp"

    android:background="@drawable/selector_card_background"
    android:descendantFocusability="afterDescendants">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/border">
        <TextView
            android:text="Nombre de la Materia"
            android:textSize="20dp"
            android:paddingRight="10dp"
            android:maxWidth="400dp"
            android:id="@+id/nombreM"
            android:paddingBottom="20dp"
            android:layout_marginLeft="10dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            />


        <!--   android:id="@+id/card_main_inner_simple_title"

          -->
        <TextView
            android:text="4.5"

            android:width="70dp"
            android:paddingBottom="10dp"
            android:paddingLeft="0dp"
            android:textSize="26dp"
            android:textStyle="bold"
            android:gravity="right"
            android:layout_marginRight="20dp"
            android:layout_gravity="right"
            android:id="@+id/notaDef"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_izq"/>

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#000"

        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="0dp">

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="left"
            android:gravity="center"

            >
            <TextView
                android:text="PP"
                android:textSize="15dp"
                android:gravity="left"
                android:layout_gravity="left"

                android:id="@+id/card_main_inner_simple_title4"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="2.5"
                android:textSize="20dp"
                android:gravity="left"
                android:layout_gravity="left"
                android:id="@+id/notaPP"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/border_izq">

            <TextView
                android:text="SP"
                android:gravity="left"
                android:layout_gravity="left"
                android:textSize="15dp"
                android:id="@+id/card_main_inner_simple_titl3e"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="4"
                android:textSize="20dp"
                android:gravity="left"
                android:layout_gravity="left"
                android:id="@+id/notaSP"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/border_izq">
            <TextView
                android:text="TP"
                android:gravity="left"
                android:layout_gravity="left"
                android:textSize="15dp"
                android:id="@+id/card_main_inner_simple_titl5"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="3"
                android:gravity="left"
                android:layout_gravity="left"
                android:textSize="20dp"
                android:id="@+id/notaTP"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </LinearLayout>


        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:background="@drawable/border_izq"
            >



            <TextView
                android:text="EX"
                android:textSize="15dp"
                android:id="@+id/card_main_inner_simple_tit6e"
                android:layout_marginLeft="10dp"
                android:gravity="left"
                android:layout_gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="1.5"
                android:textSize="20dp"
                android:id="@+id/notaEX"
                android:layout_marginLeft="10dp"
                android:gravity="left"
                android:layout_gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:background="@drawable/border_izq"
            >



            <TextView
                android:text="HA"
                android:textSize="15dp"
                android:id="@+id/card_main_inner_simple_tit26e"
                android:layout_marginLeft="10dp"
                android:gravity="left"
                android:layout_gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="3.2"
                android:textSize="20dp"
                android:id="@+id/notaHA"
                android:layout_marginLeft="10dp"
                android:gravity="left"
                android:layout_gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </LinearLayout>

    </LinearLayout>


</LinearLayout>